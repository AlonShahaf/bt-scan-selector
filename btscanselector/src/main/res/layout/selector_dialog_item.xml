<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="device"
            type="com.phearme.btscanselector.BTScanResultItem"/>
        <variable
            name="viewModel"
            type="com.phearme.btscanselector.BTScanSelectorViewModel"/>
    </data>
    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:padding="4dp"
        android:onClick="@{() -> viewModel.onItemResultClick(device)}"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="8dp"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iconSignal"
                android:layout_centerHorizontal="true"
                android:src="@drawable/network_high"
                android:layout_width="32dp"
                android:layout_height="32dp"
                tools:ignore="ContentDescription" />
            <TextView
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:text="@{device.rssi}"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iconSignal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@{device.bluetoothDevice.name}"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionMode.Title"/>
            <TextView
                android:text="@{device.bluetoothDevice.address}"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionMode.Subtitle"/>
        </LinearLayout>
    </LinearLayout>
</layout>